// tsconfig.json
{
  "compilerOptions": {
    // 어떤 JS/TS 구문을 인식할지
    "target": "ES2020",
    "lib": [ "ES2020", "DOM", "DOM.Iterable" ],

    // 모듈 해석 방식을 Node 스타일로
    "module": "ESNext",
    "moduleResolution": "node",

    // React 17+ JSX 변환
    "jsx": "react-jsx",

    // 편의 및 호환 설정
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    // 엄격 모드
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // 빌드 산출물은 만들지 않음
    "noEmit": true,

    // JSON 모듈 import 허용 (필요시)
    "resolveJsonModule": true,
    // JS 파일 import 허용 (필요시)
    "allowJs": true
  },
  "include": [
    // 여러분의 소스 루트
    "src",
    // global.d.ts (css/glb/gltf declare module 등)
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
